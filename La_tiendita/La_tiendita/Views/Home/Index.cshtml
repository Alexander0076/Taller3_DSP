@model La_tiendita.Models.Vendedor

@{
    ViewBag.Title = "Index";
}

@{
    Layout = null;

}

    <title>Login</title>

    <!-- Meta-Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- style CSS -->
    <link rel="stylesheet" href="~/Views/Home/css/style.css" type="text/css" media="all">

    <!-- fontawesome -->
    <link rel="stylesheet" href=""~/Views/Home/css/font-awesome.min.css" type="text/css" media="all">

    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Mukta:300,400,500" rel="stylesheet">


<!-- //Head -->
<!-- Body -->
<body>

    <section class="main">

        <div class="bottom-grid">
            <div class="logo">
                <h1> <a href="#">Login</a></h1>
            </div>
        </div>
        <div class="content-w3ls">
            <div class="text-center icon">
                <span class="fa fa-meetup"></span>
            </div>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="content-bottom">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="#" method="post">
                        <div class="field-group">
                            @Html.LabelFor(model => model.Usuario_vendedor, htmlAttributes: new { @class = "fa fa-user", @aria_hidden = "true" })
                            <div class="wthree-field">
                                @Html.EditorFor(model => model.Usuario_vendedor, new { htmlAttributes = new { @class = "form-control", @id = "text1", @placeholder = "Username" } })
                                @Html.ValidationMessageFor(model => model.Usuario_vendedor, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="field-group">
                            @Html.LabelFor(model => model.contasena, htmlAttributes: new { @class = "fa fa-lock", @aria_hidden = "true" })
                            <div class="wthree-field">
                                @Html.EditorFor(model => model.contasena, new { htmlAttributes = new { @class = "form-control", @id = "myInput", @type = "Password", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.contasena, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="wthree-field">
                            @*<input type="submit" value="Iniciar Sesión" class="btn btn-default" />*@
                            <button type="submit" class="btn">Sign in</button>
                        </div>
                        <ul class="list-login-bottom">
                            <li class="">
                                @Html.ActionLink("Registrar", "Insertar", null, new { @class = "text-right" })
                            </li>
                            <li class="clearfix"></li>
                        </ul>
                    </form>


                    

                </div>
            }

                <div class="wthree-field">
                    @Html.ActionLink("Tabla", "Tabla", null, new { @class = "btn" })
                </div>
        </div>
        <div class="copyright">
            <p>© 2021</p>
        </div>
    </section>

</body>


</html>



